<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaDavinci.Mobile.Views.GalleryPage"
             xmlns:vm="clr-namespace:GaleriaDavinci.Mobile.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:GalleryViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Label Text="{Binding Title}"></Label>
        <ScrollView>
            <CollectionView ItemsSource="{Binding GalleryItems}"
                        ItemsLayout="VerticalGrid, 2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Image Source="{Binding Image}" HeightRequest="200" WidthRequest="200"></Image>
                            <Label Text="{Binding Name}"></Label>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
    
</ContentPage>